---
import BaseLayout from '../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

const allPosts = await getCollection('blog');

// Get all unique categories with their post counts
const categoryMap = new Map<string, number>();
allPosts.forEach(post => {
  post.data.categories.forEach(category => {
    const count = categoryMap.get(category) || 0;
    categoryMap.set(category, count + 1);
  });
});

// Sort categories alphabetically
const categories = Array.from(categoryMap.entries()).sort((a, b) =>
  a[0].localeCompare(b[0])
);
---

<BaseLayout title="Categories" description="Browse posts by category" image="/images/categories-og.png">
  <section class="py-12">
    <div class="container mx-auto px-4">
      <h1 class="text-4xl font-heading mb-8">Categories</h1>

      <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4">
        {categories.map(([category, count]) => (
          <a
            href={`/category/${category.toLowerCase()}/`}
            class="bg-background-2 rounded-lg p-4 hover:bg-background-3 transition-colors no-underline"
          >
            <span class="text-text font-medium">{category}</span>
            <span class="text-text-muted text-sm ml-2">({count})</span>
          </a>
        ))}
      </div>
    </div>
  </section>
</BaseLayout>
