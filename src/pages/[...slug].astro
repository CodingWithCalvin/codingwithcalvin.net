---
import type { GetStaticPaths } from 'astro';
import { render } from 'astro:content';
import PostLayout from '../layouts/PostLayout.astro';
import { getPostsWithImages, getSlug } from '../lib/posts';

export const getStaticPaths = (async () => {
  const posts = await getPostsWithImages();

  return posts.map(post => ({
    params: { slug: getSlug(post.id) },
    props: { post, slug: getSlug(post.id) },
  }));
}) satisfies GetStaticPaths;

const { post, slug } = Astro.props;
const { Content } = await render(post);
---

<PostLayout
  title={post.data.title}
  subtitle={post.data.subtitle}
  slug={slug}
  date={post.data.date}
  categories={post.data.categories}
  description={post.data.description}
  image={post.resolvedImage}
  youtube={post.data.youtube}
  blueskyPostId={post.data.blueskyPostId}
>
  <Content />
</PostLayout>
