---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="Page Not Found" description="The page you're looking for doesn't exist">
  <section class="py-24">
    <div class="container mx-auto px-4 text-center">
      <h1 class="text-8xl font-heading text-primary mb-4">404</h1>
      <h2 class="text-2xl font-heading mb-6">Page Not Found</h2>
      <p class="text-text-muted mb-8">The page you're looking for doesn't exist or has been moved.</p>
      <a href="/" class="inline-block bg-primary hover:bg-primary-hover text-white px-6 py-3 rounded-lg no-underline transition-colors">
        Go Home
      </a>
    </div>
  </section>
</BaseLayout>
