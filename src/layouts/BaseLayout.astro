---
import '../styles/global.css';
import { getCollection } from 'astro:content';

interface Props {
  title: string;
  description?: string;
  image?: string;
  type?: 'website' | 'article';
}

const { 
  title, 
  description = "Software development blog by Calvin Allen", 
  image,
  type = 'website'
} = Astro.props;

const canonicalURL = new URL(Astro.url.pathname, Astro.site);
const ogImage = image ? new URL(image, Astro.site).href : new URL('/images/default-og.png', Astro.site).href;
const siteName = "Coding With Calvin";

// Get earliest blog post year for copyright
const allPosts = await getCollection('blog');
const earliestYear = allPosts.length > 0 
  ? Math.min(...allPosts.map(p => p.data.date.getFullYear()))
  : new Date().getFullYear();
const currentYear = new Date().getFullYear();
const twitterHandle = "@_CalvinAllen";
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <link rel="apple-touch-icon" href="/apple-touch-icon.png" />
    <link rel="canonical" href={canonicalURL} />
    
    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Fira+Mono&family=Lora:ital@1&family=Merriweather:wght@300;400;700&family=Open+Sans:wght@300;400;500;600;700&display=swap" rel="stylesheet" />
    
    <!-- SEO -->
    <title>{title} | {siteName}</title>
    <meta name="description" content={description} />
    <meta name="author" content="Calvin Allen" />
    <meta name="generator" content={Astro.generator} />
    
    <!-- Open Graph / Facebook / LinkedIn / BlueSky -->
    <meta property="og:type" content={type} />
    <meta property="og:site_name" content={siteName} />
    <meta property="og:locale" content="en_US" />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={ogImage} />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <meta property="og:image:alt" content={title} />
    
    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:site" content={twitterHandle} />
    <meta name="twitter:creator" content={twitterHandle} />
    <meta name="twitter:url" content={canonicalURL} />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={ogImage} />
    <meta name="twitter:image:alt" content={title} />

    <!-- RSS -->
    <link rel="alternate" type="application/rss+xml" title={siteName + " RSS Feed"} href="/rss.xml" />

    <!-- Google Analytics -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-KSJFBF9RTY"></script>
    <script is:inline>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());
      gtag('config', 'G-KSJFBF9RTY');
    </script>
  </head>
  <body class="min-h-screen flex flex-col">
    <header class="border-b border-border py-4">
      <div class="container mx-auto px-4 flex items-center justify-between">
        <a href="/" class="hover:opacity-80 no-underline flex-shrink-0">
          <img src="/images/logo.png" alt="Coding With Calvin" class="h-10 w-auto" />
        </a>
        <nav class="flex items-center gap-6 relative z-10">
          <a href="/" class="text-text-muted hover:text-primary no-underline">Home</a>
          <a href="/blog" class="text-text-muted hover:text-primary no-underline">Blog</a>
          <a href="/projects" class="text-text-muted hover:text-primary no-underline">Projects</a>
          <a href="/categories" class="text-text-muted hover:text-primary no-underline">Categories</a>
        </nav>
      </div>
    </header>
    
    <main class="flex-1">
      <slot />
    </main>
    
    <footer class="border-t border-border py-8 mt-auto">
      <div class="container mx-auto px-4 text-center text-text-muted">
        <div class="flex justify-center gap-6 mb-4">
          <a href="https://twitter.com/_CalvinAllen" target="_blank" rel="noopener noreferrer" class="text-text-muted hover:text-primary no-underline" aria-label="Twitter">
