---
import { Image } from 'astro:assets';
import type { ImageMetadata } from 'astro';
import BaseLayout from './BaseLayout.astro';
import TechStackBadges from '../components/TechStackBadges.astro';
import { getStatusColor, formatCount } from '../lib/projects';

interface Props {
  title: string;
  slug: string;
  description: string;
  longDescription?: string;
  repoUrl: string;
  demoUrl?: string;
  docsUrl?: string;
  techStack: string[];
  language: string;
  status: 'active' | 'maintained' | 'archived' | 'experimental';
  startDate: Date;
  lastUpdated?: Date;
  image?: ImageMetadata;
  marketplace?: {
    type: 'vs-marketplace' | 'nuget' | 'npm' | 'other';
    url: string;
  };
  stars?: number;
  forks?: number;
  downloads?: number;
  rating?: number;
  ratingCount?: number;
  latestRelease?: {
    version: string;
    publishedAt: string;
    url: string;
  };
}

const {
  title,
  slug,
  description,
  longDescription,
  repoUrl,
  demoUrl,
  docsUrl,
  techStack,
  language,
  status,
  startDate,
  lastUpdated,
  image,
  marketplace,
  stars,
  forks,
  downloads,
  rating,
  ratingCount,
  latestRelease,
} = Astro.props;

const formattedStartDate = startDate.toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'long',
  timeZone: 'America/New_York',
});

const formattedLastUpdated = lastUpdated?.toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric',
  timeZone: 'America/New_York',
});

const marketplaceLabels = {
  'vs-marketplace': 'VS Marketplace',
  'nuget': 'NuGet',
  'npm': 'npm',
  'other': 'Marketplace',
};

// Get the image URL for OG tags
const ogImageUrl = image?.src;
---

<BaseLayout title={title} description={description} image={ogImageUrl} type="website">
  <article class="py-12">
    <div class="container mx-auto px-4 max-w-3xl relative md:pl-8">
      <div class="absolute left-0 top-0 bottom-0 w-3 bg-gradient-to-b from-primary via-primary/50 to-transparent hidden md:block"></div>
      <div class="absolute left-3 top-0 bottom-0 w-1 bg-gradient-to-b from-[#FFB833] via-[#FFB833]/50 to-transparent hidden md:block"></div>

      {image && (
        <div class="mb-8 rounded-lg overflow-hidden">
          <Image
            src={image}
            alt={title}
            quality={80}
            format="webp"
            class="w-full"
          />
        </div>
      )}

      <div class="mb-8">
        <TechStackBadges techStack={techStack} />
      </div>

      <div class="flex flex-wrap gap-3 mb-8">
        <a
          href={repoUrl}
          target="_blank"
          rel="noopener noreferrer"
          class="inline-flex items-center gap-2 px-4 py-2 bg-background-2 hover:bg-background-3 rounded-lg text-text no-underline transition-colors"
        >
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
            <path fill-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" clip-rule="evenodd"/>
          </svg>
          GitHub
        </a>

        {marketplace && (
          <a
            href={marketplace.url}
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex items-center gap-2 px-4 py-2 bg-primary/20 hover:bg-primary/30 rounded-lg text-primary no-underline transition-colors"
          >
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4"/>
            </svg>
            {marketplaceLabels[marketplace.type]}
          </a>
        )}

        {demoUrl && (
          <a
            href={demoUrl}
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex items-center gap-2 px-4 py-2 bg-background-2 hover:bg-background-3 rounded-lg text-text no-underline transition-colors"
          >
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
            </svg>
            Demo
          </a>
        )}

        {docsUrl && (
          <a
            href={docsUrl}
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex items-center gap-2 px-4 py-2 bg-background-2 hover:bg-background-3 rounded-lg text-text no-underline transition-colors"
          >
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"/>
            </svg>
            Docs
          </a>
        )}
      </div>

      {(stars !== undefined || forks !== undefined || downloads !== undefined || rating !== undefined || latestRelease) && (
        <div class="flex flex-wrap gap-6 mb-8 p-4 bg-background-2 rounded-lg">
          {stars !== undefined && (
            <div class="flex items-center gap-2">
              <svg class="w-5 h-5 text-yellow-400" fill="currentColor" viewBox="0 0 24 24">
                <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
              </svg>
              <span class="text-text font-medium">{formatCount(stars)}</span>
              <span class="text-text-muted text-sm">stars</span>
            </div>
          )}
          {forks !== undefined && forks > 0 && (
            <div class="flex items-center gap-2">
              <svg class="w-5 h-5 text-text-muted" fill="currentColor" viewBox="0 0 24 24">
                <path fill-rule="evenodd" d="M12 21a1.75 1.75 0 110-3.5 1.75 1.75 0 010 3.5zm-3.25-1.75a3.25 3.25 0 106.5 0 3.25 3.25 0 00-6.5 0zm-3-12.75a1.75 1.75 0 110-3.5 1.75 1.75 0 010 3.5zM2.5 4.75a3.25 3.25 0 106.5 0 3.25 3.25 0 00-6.5 0zM18.25 6.5a1.75 1.75 0 110-3.5 1.75 1.75 0 010 3.5zM15 4.75a3.25 3.25 0 106.5 0 3.25 3.25 0 00-6.5 0z" clip-rule="evenodd"/>
                <path d="M6.5 7.75v1A2.25 2.25 0 008.75 11h6.5a2.25 2.25 0 002.25-2.25v-1H19v1a3.75 3.75 0 01-3.75 3.75h-2.5v5h-1.5v-5h-2.5A3.75 3.75 0 015 8.75v-1h1.5z"/>
              </svg>
              <span class="text-text font-medium">{formatCount(forks)}</span>
              <span class="text-text-muted text-sm">forks</span>
            </div>
          )}
          {downloads !== undefined && (
            <div class="flex items-center gap-2">
              <svg class="w-5 h-5 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4"/>
              </svg>
              <span class="text-text font-medium">{formatCount(downloads)}</span>
              <span class="text-text-muted text-sm">installs</span>
            </div>
          )}
          {rating !== undefined && (
            <div class="flex items-center gap-2">
              <div class="flex">
                {[1, 2, 3, 4, 5].map(star => (
                  <svg
                    class={`w-4 h-4 ${star <= Math.round(rating) ? 'text-yellow-400' : 'text-gray-600'}`}
                    fill="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
                  </svg>
                ))}
              </div>
              <span class="text-text font-medium">{rating.toFixed(1)}</span>
              {ratingCount !== undefined && (
                <span class="text-text-muted text-sm">({ratingCount} reviews)</span>
              )}
            </div>
          )}
          {latestRelease && (
            <a
              href={latestRelease.url}
              target="_blank"
              rel="noopener noreferrer"
              class="flex items-center gap-2 no-underline hover:text-primary transition-colors"
            >
              <svg class="w-5 h-5 text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"/>
              </svg>
              <span class="text-text font-medium">{latestRelease.version}</span>
              <span class="text-text-muted text-sm">latest</span>
            </a>
          )}
        </div>
      )}

      <h1 class="text-4xl font-heading mb-6">{title}</h1>

      <div class="prose prose-lg max-w-none">
        <slot />
      </div>
    </div>
  </article>
</BaseLayout>
